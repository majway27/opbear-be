{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "OPBEAR"
  },
  "basePath": "/prod",
  "schemes": [
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "responses": {},
        "security": [
          {
            "OpBearCog": []
          }
        ],
        "x-amazon-apigateway-integration": {
          "uri": {"Fn::Join": ["",
            ["arn:aws:apigateway:", {"Ref": "AWS::Region"}, ":lambda:path/2015-03-31/functions/", {"Fn::GetAtt": ["OBLambdaSetup", "Arn"]}, ":prod/invocations"]
          ]},
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "type": "aws_proxy"
        }
      },
      "post": {
        "responses": {},
        "security": [
          {
            "OpBearCog": []
          }
        ],
        "x-amazon-apigateway-integration": {
          "uri": {"Fn::Join": ["",
            ["arn:aws:apigateway:", {"Ref": "AWS::Region"}, ":lambda:path/2015-03-31/functions/", {"Fn::GetAtt": ["OBLambdaSetup", "Arn"]}, ":prod/invocations"]
          ]},
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "type": "aws_proxy"
        }
      }
    }
  },
  "securityDefinitions": {
    "OpBearCog": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "x-amazon-apigateway-authtype": "cognito_user_pools",
      "x-amazon-apigateway-authorizer": {
        "providerARNs": [{"Fn::GetAtt": ["OBCognitoUserPool", "Arn"]}],
        "type": "cognito_user_pools"
      }
    }
  }
